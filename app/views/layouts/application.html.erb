<!doctype html>
<html>
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Trebolia Dashboard" %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
  </head>
  <body>
  <script src="http://code.highcharts.com/highcharts.js"></script>
  <script src="http://code.highcharts.com/modules/exporting.js"></script>
  <div class="row">
    <header class="navbar navbar-fixed-top span12" style=" margin: 0px auto;" >
      <nav class="navbar-inner">
        <div class="container" style= " overflow: hidden; " >
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
  </div>
  <div id="main" role="main">
    <div class="container">
            <%= yield %>
   </div> <!--! end of .container -->
  </div> <!--! end of #main -->      
  <div class="navbar navbar-fixed-bottom span12" style=" margin: 0px auto;">
    <nav class="navbar-inner">
      <footer style= "text-align: center;">  Pernix Solutions - 2013 </footer>
    </nav>
  </div>
  </body>
  </html>
